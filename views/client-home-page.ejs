<%- include('partials/client-header'); -%>



<div class="container  h-100">
    <header class="row g-2 mb-3">
        <div class="col-sm-12 col-md-6 col-lg-3 ">
          <a href="/client-pending-orders" class="nav-link">
            <div class="card bg-secondary text-white">
              <div class="card-body text-center"> 
                <i class="bi bi-stopwatch sw"></i>
                <h5 class="card-title">Pending Payment</h5>
                <h6 class="card-subtitle mb-2"><%= pending %></h6>
              </div>
            </div>
          </a>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-3">
          <a href="/client-delivered-orders" class="nav-link">
            <div class="card bg-success text-white">
              <div class="card-body text-center">
                <i class="bi bi-check-lg sw"></i>
                <h5 class="card-title">Delivered</h5>
                <h6 class="card-subtitle mb-2"><%= delivered %></h6>
              </div>
            </div>
          </a>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-3">
          <a href="/client-canceled-orders" class="nav-link">
            <div class="card bg-danger text-white">
              <div class="card-body text-center">
                <i class="bi bi-x-lg sw"></i>
                <h5 class="card-title">Canceled</h5>
                <h6 class="card-subtitle mb-2"><%= canceled %></h6>
              </div>
            </div>
          </a>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-3">
          <a href="/client-transit-orders" class="nav-link">
            <div class="card bg-warning">
              <div class="card-body text-center">
                <i class="bi bi-truck sw"></i>
                <h5 class="card-title">In Transit</h5>
                <h6 class="card-subtitle mb-2"><%= intransit %></h6>
              </div>
            </div>
          </a>
        </div>
      </header>
    <div class="row mb-3">
        <div class="border shadow-sm rounded">
            <div class="row align-items-center p-2 g-2">
                <div class="col-sm-6 col-md-6 col-lg-6">
                    <a href="" class="nav-link"><h5>packages(<%= packages.length %>)</h5></a>
                </div>
                <div class="col-sm-6 col-md-3 col-lg-3">
                    <input
                      id="search-products"
                      onkeyup="searchProducts(this)"
                      type="text"
                      class="form-control rounded"
                      placeholder="Search"
                      aria-label="Recipient's username"
                      aria-describedby="button-addon2"
                    />
                </div>
                <div class="col-sm-6 col-md-3 col-lg-3">
                    <select
                      id="search-filter"
                      class="form-select"
                      aria-label="Default select example"
                    >
                      <option value="0" selected>Number</option>
                      <option value="1" >ID</option>
                      <option value="2" >Name</option>
                      <option value="4">Category</option>
                      
                    </select>
                </div>
            </div>
            <div class="row align-items-center p-2 g-2">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th>ID</th>
                                <th scope="col">
                                    <div class="text-nowrap">Order Name</div>
                                </th>
                                <th scope="col"><div class="text-nowrap">Barcode</div></th>
                                <th scope="col">Category</th>
                                <th scope="col">Status</th>
                                <th scope="col">Customer Name</th>
                                <th scope="col">Customer ID</th>
                                <th scope="col">Delivery Date</th>
                                <th scope="col">Destination</th>
                                <th scope="col">Width</th>
                                <th scope="col">Height</th>
                                <th scope="col">Cost</th>
                                <th scope="col">paid</th>

                            </tr>
                        </thead>
                        <tbody id="records" class="table-group-divider">
                            <% packages.forEach((record) => { %>
                                <tr>
                                    <th class="ids" scope="row"><%= ++number %></th>
                                    <td>
                                        <%= record.package_id %>
                                    </td>
                                    <td>
                                        <%= record.pname %>
                                    </td>
                                    <td>
                                        <%= record.barcode %>
                                    </td>
                                    <td>
                                        <%= record.category %>
                                    </td>
                                    <td>
                                        <% if (record.status === "Pending"){ %>
                                            <span class="badge rounded-pill text-bg-secondary">
                                                <%= record.status %>
                                            </span>
                                        <% }else if (record.status === "In Transit") {%>
                                            <span class="badge rounded-pill text-bg-warning">
                                                <%= record.status %>
                                            </span>
                                        <% }else if (record.status === "Delivered") {%>
                                            <span class="badge rounded-pill text-bg-success">
                                                <%= record.status %>
                                            </span>
                                        <% }else{ %>
                                            <span class="badge rounded-pill text-bg-danger">
                                                <%= record.status %>
                                            </span>

                                       <% }%>
                                    </td>
                                    <td>
                                        <%= record.cname %>
                                    </td>
                                    <td>
                                        <%= record.customer_id %>
                                    </td>
                                    <td>
                                        <%= record.date %>
                                    </td>
                                    <td>
                                        <%= record.destination %>
                                    </td>
                                    <td>
                                        <%= record.width %>
                                    </td>
                                    <td>
                                        <%= record.height %>
                                    </td>
                                    <td>
                                        <%= "$" + record.cost %>
                                    </td>
                                    <td>
                                        <% if(record.paid === 0){ %>
                                            No
                                        <% }else { %>
                                            Yes
                                        <% } %>
                                    </td>
                                </tr>
                            <% })%>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
</div>


<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
  crossorigin="anonymous"
></script>
<script src="test.js"></script>
</body>
</html>